{
    "env": {
        "es2022": true,
        "node": true
    },
    "extends": [
        "standard",
        "prettier",
        "plugin:import/recommended"
    ],
    "plugins": [
        "prettier",
        "import",
        "eslint-plugin-import-helpers"
    ],
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "error",
        "prettier/prettier": "error",
        "import-helpers/order-imports": [
            "warn",
            {
                "newlinesBetween": "always",
                "groups": [
                    "module",
                    [
                        "parent",
                        "sibling",
                        "index"
                    ]
                ],
                "alphabetize": {
                    "order": "asc",
                    "ignoraCase": true
                }
            }
        ]
    }
}