generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Torrent {
  id      Int      @id @default(autoincrement())
  magnet  String
  title   String   @unique
  pubDate DateTime
}

model AcceptedTags {
  id  Int    @id @default(autoincrement())
  tag String @unique
}

model VerifyTags {
  id  Int    @id @default(autoincrement())
  tag String @unique
}

model Mangas {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  link        String
  type        String
  Chapters    Chapters[]
  idSiteManga Int?
  siteManga   SiteManga? @relation(fields: [idSiteManga], references: [id])
}

model SiteManga {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  autoDownload Boolean  @default(false)
  Mangas       Mangas[]
}

model Chapters {
  id       Int      @id @default(autoincrement())
  name     String
  link     String
  images   String[]
  manga    Mangas   @relation(fields: [mangaId], references: [id])
  mangaId  Int
  read     Boolean  @default(false)
  createAt DateTime @default(now())
  error    Boolean  @default(false)
  filePath String?

  @@unique([name, mangaId])
}
